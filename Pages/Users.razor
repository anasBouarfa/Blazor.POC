@page "/users"

<h3>Users</h3>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in UserService.GetUsers())
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td><a href="/users/@user.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>
